#consultation_order
    padding: 60px 0 80px
    h5
        font-size: 32px;
        font-family: "HelveticaNeueCyrBold", sans-serif;
        color: rgb(37, 37, 37);
        line-height: 1.25;
        text-align: center
        margin-bottom: 30px
        &+p
            font-size: 18px;
            font-family: "HelveticaNeueCyrRoman", sans-serif;
            color: rgba(85, 94, 124, 0.8);
            line-height: 1.444;
            text-align: center;
            max-width 515px;
            margin 0 auto 61px
.consult_form
    margin-bottom: 68px
    input:nth-child(4)
        float left
.request_example
    border: 1px solid rgb(232, 232, 232);
    border-radius: 5px;
    background-color: rgb(255, 255, 255);
    position: relative
    min-height: 326px;
    padding 54px 40px
    margin: 0 auto 93px
    p
        font-size: 16px;
        font-family: "HelveticaNeueCyrItalic", sans-serif;
        color: rgba(37, 37, 37, 0.8);
        line-height: 1.7
    &:after
        content: ''
        display block
        width: 30px
        height 30px
        border-top: 1px solid rgb(232, 232, 232);
        border-right: 1px solid rgb(232, 232, 232);
        background-color: rgb(255, 255, 255);
        position: absolute
        top: -16px
        left 65px
        transform: rotate(-45deg)
.specialists_title
    font-size: 42px;
    font-family: "HelveticaNeueCyrBlack", sans-serif;
    color: rgb(37, 37, 37);
    line-height: 1.167;
    text-align: center
    margin-bottom: 76px
.our_specialist
    max-width 90%
    margin 0 auto 60px
    text-align: center
    img
        border-radius: 50%;
        width: 161px;
        height: 161px;
        margin 0 auto
        display block
    h4
        font-size: 18px;
        font-family: "HelveticaNeueCyrBold", sans-serif;
        color: rgb(37, 37, 37);
        font-weight: bold;
        line-height: 1.2;
        margin: 25px 0 3px
    p
        font-size: 16px;
        font-family: "HelveticaNeueCyrRoman", sans-serif;
        color: rgb(85, 94, 124);
        line-height: 1.438;
.all_specialists
    margin 0 auto 80px
    width: 225px;
    &:hover
        color: #23527c;
#our_specialists_more
    display: none