#main_body
	#main_screen
		padding: 24px 0 56px
.pc_button
	border: 2px solid #fff;
	border-radius: 23px;
	position: absolute;
	right 15px
	top: 0
	height: 41px;
	line-height: 41px
	font-size: 16px;
	font-family: "HelveticaNeueCyrBold";
	color: rgb(255, 255, 255);
	text-align: center
	display: inline-block;
	padding: 0 15px;
	&:hover
		color #ffffff
		text-decoration: none
		background-image: linear-gradient( 174deg, rgb(30,28,251) 0%, rgb(69,67,251) 100%);
		border-color rgb(69,67,251)
	&:focus
		color: rgb(255, 255, 255);
		text-decoration: none
#main_menu
	margin 9px 0 54px
	li
		font-size: 14px;
		font-family: "HelveticaNeueCyrMedium", sans-serif;
		text-transform: uppercase;
		line-height: 1.2
		list-style: none
		display: inline-block
		margin-right: 40px
		a
			color: rgba(#fff,.6)
			&:hover
				color #fff
				text-decoration: none
		&:last-child
			margin-right: 0

#main_slider_container
	position relative
	width: 100%
	margin 0 auto
	left 0
	right 0
	bottom 0
	overflow hidden
	height 361px
#main_slider
	width: 2000px
	position: absolute
	bottom 0px
	left -309px
	right -315px
.item
	img
		float left
		margin 0 20px