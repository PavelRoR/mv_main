#last_posts
    padding: 100px 0
    overflow hidden
    .title_an_rules
        h3
            margin:31px 0 51px
            line-height: 1.3
            padding-right: 15px
        .slider_nav
            margin-top: 0
    .lSAction
        top 120px
    .lSSlideOuter
        width: 150%
.all_posts
    display block
    margin-top: 153px
    border: 2px solid rgba(40, 53, 160, .2);
    border-radius: 25px
    text-align: center
    width: 180px;
    height: 49px;
    line-height: 46px;
    font-size: 14px;
    font-family: "HelveticaNeueCyrBold", sans-serif;
    color: rgb(85, 83, 254);
    text-transform: uppercase;
    &:focus
        color: rgb(85, 83, 254);
        text-decoration: none
    &:hover
        text-decoration: none
.all_posts_after
    display: none
#last_posts_slider
    width: 2000px !important
.lp_single
    border-radius: 3px;
    background-color: rgb(255, 255, 255);
    box-shadow: 0px 0px 17px 0px rgba(0, 0, 0, 0.07);
    width: 360px !important
    height: 457px;
    display: inline-block
    margin 0 15px
    position relative
    float left
    &:focus
    &:hover
        text-decoration: none
    // &:nth-child(1)
    &:nth-child(3n+1)
        .lp_cat
            background-color: rgb(207, 116, 18)
    &:nth-child(3n)
        .lp_cat
            background-color: #20bb83
    &:nth-child(3n+2)
        .lp_cat
            background-color: #554994
.lp_cat
    position: absolute
    top 26px
    left 31px
    border-radius: 2px;
    display: inline-block
    padding: 0 14px
    height: 30px;
    text-align: center
    line-height: 30px
    font-size: 10px;
    font-family: "HelveticaNeueCyrLight", sans-serif;
    color: #fff;
    text-transform: uppercase;
.lp_thumbnail
    width: 100%
    height: 170px
.lp_about
    padding: 27px 29px
.lp_title
    font-size: 20px;
    font-family: "HelveticaNeueCyrBold", sans-serif;
    color: rgb(31, 31, 31);
    font-weight: bold;
    line-height: 1.25;
    margin-bottom: 11px
    &+p
        font-size: 18px;
        font-family: "HelveticaNeueCyrRoman", sans-serif;
        color: rgba(85, 94, 124, 0.8);
        line-height: 1.444;
        margin-bottom: 0
.arrow_more
    border: 2px solid rgba(40, 53, 160, .2);
    border-radius: 50%;
    width: 36px;
    height: 36px;
    line-height: 30px;
    position: absolute
    bottom: 30px
    left 30px
    color #2220fb
    display block
    text-align: center
    font-size: 16px
    cursor pointer
    &:focus
        text-decoration: none
    &:hover
        background-image: linear-gradient(  174deg, #3432de 0%, #4745d7 100%);
        color #f7f8fa
        text-decoration: none
.lp_single:hover
.team_card:hover
    .arrow_more
        background-image: linear-gradient(  174deg, #3432de 0%, #4745d7 100%);
        color #f7f8fa
        text-decoration: none
.lp_seen
    display: inline-block
    position: absolute
    bottom: 36px
    right 30px
    font-size: 16px;
    font-family: "HelveticaNeueCyrRoman",sans-serif;
    color: rgba(85, 94, 124, 0.6);
    text-transform: uppercase;
    .fa
        margin-right: 10px