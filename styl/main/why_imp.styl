#why_we
    padding: 100px 0 50px
    h3
        font-size: 42px;
        font-family: "HelveticaNeueCyrBlack", sans-serif;
        color: rgb(37, 37, 37);
        line-height: 1.167;
        margin-bottom: 60px
.wy_wrapper
    .wy_container
        border-radius: 3px;
        background-color: #fff
        box-shadow: 0px 0px 17px 0px rgba(0, 0, 0, 0.2);
        height: 310px;
        padding: 30px
.wy_img
    height 60px
    background-repeat no-repeat
    background-image url(../img/why_icons.png)
.why_title
    font-size: 22px;
    font-family: "HelveticaNeueCyrBold", sans-serif;
    color: rgb(50, 50, 50);
    line-height: 1.2
    margin 25px 0 9px
.why_par
    font-size: 18px;
    font-family: "HelveticaNeueCyrRoman", sans-serif;
    color: rgba(85, 94, 124, 0.8);
    line-height: 1.45
    margin: 0
.wy_wrapper
    &:first-child
        .wy_container
            background-image: linear-gradient( 174deg, rgb(30,28,251) 0%, rgb(69,67,251) 100%);
            margin-bottom: 30px
        .wy_img
            width: 58px
            background-position 0 bottom
        .why_title
        .why_par
            color #fff
    &:nth-child(2)
        .wy_container
            background-image url(../img/online_bg.jpg)
            background-repeat no-repeat
            background-position: center right
            padding: 31px 265px 30px 30px
            margin-bottom: 30px
        .why_title
            font-size: 24px
            margin-bottom: 12px;
            line-height: 1.3;
        .why_par
            font-size: 20px
    &:nth-child(3)
        .wy_img
            width: 52px
            background-position -60px 0
    &:nth-child(4)
        .wy_img
            width: 60px
            background-position -112px 0
    &:last-child
        .wy_img
            width: 45px
            background-position -172px 0