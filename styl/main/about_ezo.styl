#about_esoteric
    padding: 100px 0 50px
#about_eso_video_container
    position relative
    h4
        position: absolute
        padding 35px 42px 0
        margin 0
        z-index 9
        font-size: 24px;
        font-family: "HelveticaNeueCyrBold", sans-serif;
        color: rgb(255, 255, 255);
        font-weight: bold;
        line-height: 1.4;
        margin-bottom: 10px
        cursor pointer
        small 
            font-size: 16px;
            font-family: "HelveticaNeueCyrRoman", sans-serif;
    .video_wrapper:before
        padding-top: 86.7%;
.main_form
    border-radius: 3px;
    background-color: #fff
    box-shadow: 0px 0px 17px 0px rgba(0, 0, 0, 0.2);
    padding: 25px 25px 30px
    margin-bottom: 30px
    height 310px
.main_form_title
    font-size: 20px;
    font-family: "HelveticaNeueCyrBold", sans-serif;
    color: rgb(31, 31, 31);
    line-height: 1.3;
    margin-bottom: 10px
.main_form_subtitle
    font-size: 18px;
    font-family: "HelveticaNeueCyrRoman", sans-serif;
    color: rgba(85, 94, 124, 0.8);
    line-height: 1.444;
    margin 0
.main_form_email
    border: 1px solid rgba(85, 94, 124, .3);
    border-radius: 25px;
    width: 300px;
    height: 55px;
    line-height: 55px;
    font-size: 16px;
    font-family: "HelveticaNeueCyrRoman";
    color: rgba(85, 94, 124, 0.6);
    padding 0 20px
    margin 38px auto 20px
.main_form_button
    border-radius: 25px;
    background-image: linear-gradient( 174deg, rgb(30,28,251) 0%, rgb(69,67,251) 100%);
    width: 300px;
    height: 55px;
    line-height: 55px
    font-size: 14px;
    font-family: "HelveticaNeueCyrMedium", sans-serif;
    color: rgb(255, 255, 255);
    text-transform: uppercase;
    margin  0 auto
    text-align: center
    border: 0
    &:hover
        background-image: linear-gradient( 174deg, transparent 0%, transparent 100%);
        background-color: #252525
#students_num
    background-image url(../img/students.jpg)
    background-position 0 0
    background-repeat no-repeat
    padding: 25px 25px 30px
    height 310px
    position relative
    h5
        font-size: 24px;
        font-family: "HelveticaNeueCyrBold", sans-serif;
        color: rgb(255, 255, 255);
        line-height: 1.3
    p
        position: absolute
        left 0
        bottom: 0
        padding 0 30px 45px
        font-size: 73px;
        font-family: "HelveticaNeueCyrLight",sans-serif;
        color: rgb(255, 255, 255);
        line-height: 0.4;
        span
            font-size: 20px
            font-family: "HelveticaNeueCyrRoman",sans-serif;