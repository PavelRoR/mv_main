#about_esoteric
	padding: 100px 0 50px
#about_eso_video_container
	cursor pointer
	position relative
	&:before
		content: ''
		display block
		width: 100%
		height inherit
		top 0
		left 0
		bottom: 0
		right 0
		background-color: rgba(0,0,0,.5)
		z-index 8
		position: absolute
	&:after
		content: ''
		background-image url(../img/play_icon.png)
		background-position 0 0
		background-repeat no-repeat
		background-size contain
		position: absolute
		top: 44%
		left: 0
		right: 0
		margin: 0 auto
		display block
		z-index 10
		width: 75px
		height 75px
		border-radius: 50%
	h4
		position: absolute
		padding 35px 42px 0
		margin 0
		z-index 20
		font-size: 24px;
		font-family: "HelveticaNeueCyrBold", sans-serif;
		color: rgb(255, 255, 255);
		font-weight: bold;
		line-height: 1.4;
		margin-bottom: 10px
		cursor pointer
		small 
			font-size: 16px;
			font-family: "HelveticaNeueCyrRoman", sans-serif;
	.video_wrapper:before
		padding-top: 86.7%;
.main_form
	border-radius: 3px;
	background-color: #fff
	box-shadow: 0px 0px 17px 0px rgba(0, 0, 0, 0.2);
	padding: 25px 25px 30px
	margin-bottom: 30px
	height 310px
.main_form_title
	font-size: 20px;
	font-family: "HelveticaNeueCyrBold", sans-serif;
	color: rgb(31, 31, 31);
	line-height: 1.3;
	margin-bottom: 10px
.main_form_subtitle
	font-size: 18px;
	font-family: "HelveticaNeueCyrRoman", sans-serif;
	color: rgba(85, 94, 124, 0.8);
	line-height: 1.444;
	margin 0
.main_form_email
	border: 1px solid rgba(85, 94, 124, .3);
	border-radius: 25px;
	width: 300px;
	height: 55px;
	line-height: 55px;
	font-size: 16px;
	font-family: "HelveticaNeueCyrRoman";
	color: rgba(85, 94, 124, 0.6);
	padding 0 20px
	margin 10px auto
.main_form_button
	border-radius: 25px;
	background-image: linear-gradient( 174deg, #3432de 0%, #4745d7 100%);
	width: 300px;
	height: 55px;
	line-height: 55px
	font-size: 14px;
	font-family: "HelveticaNeueCyrMedium", sans-serif;
	color: rgb(255, 255, 255);
	text-transform: uppercase;
	margin  0 auto 10px
	text-align: center
	border: 0
	&:hover
		background-image: linear-gradient( 174deg, transparent 0%, transparent 100%);
		background-color: #252525
.checking
	display: table
	margin-bottom: 44px
	width: 100%
	.check_label
		font-size: 13px;
		font-family: "HelveticaNeueCyrRoman", sans-serif;
		color: rgba(17, 17, 18, 0.8);
		line-height: 22px
		cursor: pointer
		position: relative
		display: table-cell
		vertical-align: middle
		padding:  0 0 0 30px 
		a
			color #4745d7
.checking .check_label:before {
	content: '';
	border-radius: 2px;
	background-color: rgb(196, 196, 196);
	position: absolute;
	left: 0
	top: 0
	width: 22px;
	height: 22px;

}

.checking .check_label:after {
	content: '';
	position: absolute;
	top: 3px;
	left: -15px;
	width: 18px;
	height: 18px;
	left: 3px
	top: 3px
	width: 16px;
	height: 16px;
	background-color: #4745d7
	opacity: 0

}

.check {
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0
	height 0
	border: 0
	left -99999px
}

.check:checked + label:before  {
	border 1px solid rgb(196, 196, 196);
	background-color #fff;

}
.check:checked + label:after  {
	opacity: 1;

}
.main_form .checking .check_label
	line-height: 1.3
