#number_generator
    padding: 90px 0
#number_generator_table
    width: 300px
    height 300px
    margin: 0 auto 40px
    tr
        td
            width: 33.33334%
            height 33.33334%
            vertical-align: middle
            text-align: center
            a
                display block
                border-radius: 3px
                border: 1px solid #aaa
                width: 100%
                height 100%
                font-size: 45px
                font-family: "HelveticaNeueCyrRoman", sans-serif;
                color: #aaaaaa
                line-height: 98px
                &:hover
                    text-decoration: none
                    background-color: #5452fe
                    color: #fff
.instruction
    p
    li
        font-size: 18px
        color:  #626779
        margin-bottom: 20px
        font-family: "HelveticaNeueCyrRoman", sans-serif;
        line-height: 1.6
    ul
        list-style disc
        padding-left: 20px
    li
        margin-bottom: 10px
#restart 
    margin: 0 auto
    max-width 200px
    display none
#numbers_result
    display none
    font-size: 32px
    text-align: center
    margin-bottom: 20px
    font-family: 'HelveticaNeueCyrMedium', sans-serif
#numbers_count
    display none
    font-family: "HelveticaNeueCyrRoman", sans-serif;
    font-size: 16px
    margin-bottom: 20px
    text-align: center